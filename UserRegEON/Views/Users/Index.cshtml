@model IEnumerable<UserRegEON.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="wrapper">

    <p>
        <a asp-action="Create"><button class="submit_button" value="">+ Add User</button></a>
    </p>

    <h3>List of Registrered Users</h3>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateRegistered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Days)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Requests)
                </th>
            </tr>
        </thead>
        <tbody id="users">
        </tbody>
    </table>
</div>

<a href="/api/UsersAPI">All Users (API)</a>

<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript">
    getUsers();
</script>